// .devcontainer/devcontainer.json
{
    "name": "OhPossum Control System Dev Container",

    // Build configuration for provided Dockerfile instead of a base image
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },

    // All VS Code-related settings and extensions go under "customizations.vscode"
    "customizations": {
        "vscode": {
            "settings": {
                // Terminal defaults
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "/bin/bash"
                    }
                },
                "terminal.integrated.defaultProfile.linux": "bash"
            },
            "extensions": [
                "ms-vscode.cpptools",  
                "ms-vscode.cmake-tools", 
                "ms-vscode.cpptools-extension-pack",
                "zxh404.vscode-proto3",
            ]
        }
    },

    // Specify which user to connect as
    "remoteUser": "root"
}
